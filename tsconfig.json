{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Environment Settings === */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "types": ["node"],
    "esModuleInterop": true,       
    "resolveJsonModule": true,     

    /* === Output Options === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Type Safety === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Other Helpful Options === */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
